{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"importHelpers": false,
		"noEmitHelpers": false
	},
	"compileOnSave": false,
	"include": [
		"app/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"dev"
	]
}
